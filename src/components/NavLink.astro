---
const { href, text } = Astro.props;
const currentPath = Astro.url.pathname;
---

<style>
  .nav-link {
    @apply text-gray-500 hover:text-gray-700 px-4 py-2;
  }
  .nav-link.active {
    @apply font-bold;
  }
</style>

<a href={href} class:list={["nav-link", { active: currentPath == href} ]}>{text}</a>
