---
const { href, text } = Astro.props;
const active = Astro.url.pathname?.replace(/\/$/, "") == href?.replace(/\/$/, "");
---

<style>
  .nav-link {
    @apply text-gray-500 hover:text-gray-700 px-4 py-2;
  }
  .nav-link.active {
    @apply font-bold;
  }
</style>

<a href={href} class:list={["nav-link", { active } ]}>{text}</a>

