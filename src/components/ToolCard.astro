---
const { href, imageSrc, title, body } = Astro.props;
---

<div class="bg-white shadow-lg rounded-lg max-w-xl mx-auto flex overflow-hidden border-2">
  <!-- Image on the left -->
  <img src={imageSrc} alt="Image" class="w-1/3 object-cover pl-4">

  <!-- Content on the right -->
  <div class="p-6 w-2/3">
      <h2 class="font-bold text-xl mb-4">{title}</h2>
      <p class="text-gray-600 mb-4">{body}</p>
      <a href={href} class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded no-underline">Open</a>
  </div>
</div>
